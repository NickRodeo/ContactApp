<div class="card shadow-sm mx-auto mt-5" style="max-width: 500px">
  <div class="card-body">
    <h4 class="card-title text-center mb-4">Detail Kontak</h4>

    <ul class="list-group list-group-flush">
      <li class="list-group-item d-flex justify-content-between">
        <strong>Nama:</strong>
        <span><%= contact.nama %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between">
        <strong>No HP:</strong>
        <span><%= contact.nohp %></span>
      </li>
      <li class="list-group-item d-flex justify-content-between">
        <strong>Email:</strong>
        <span><%= contact.email %></span>
      </li>
    </ul>

    <div class="d-flex justify-content-between mt-4">
      <a href="/contact" class="btn btn-outline-primary w-100 me-2">Kembali</a>
      <a
        href="/contact/edit/<%= contact.nama %>"
        class="btn btn-warning w-100 me-2"
        >Edit</a
      >
      <form
        action="/contact/delete/<%= contact.nama %>"
        method="POST"
        onsubmit="return confirm('Yakin ingin menghapus kontak ini?')"
        class="w-100"
      >
        <button type="submit" class="btn btn-danger w-100">Hapus</button>
      </form>
    </div>
  </div>
</div>
